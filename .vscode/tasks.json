  "version": "2.0.0",
  "tasks": [
    {
      "label": "app-build",
      "type": "shell",
      "command": "docker-compose -f ./.docker-compose/docker-compose.build.yml up --build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "compose-up-debug",
      "type": "shell",
      "command": "docker-compose -f ./.docker-compose/docker-compose.build.yml -f docker-compose.debug.dev.yml up --build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "compose-down-debug",
      "type": "shell",
      "command": "docker-compose -f ./.docker-compose/docker-compose.build.yml -f docker-compose.debug.dev.yml down",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "app-test",
      "type": "shell",
      "command": "docker-compose -f ./.docker-compose/docker-compose.build.yml -f docker-compose.test.dev.yml up --build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
